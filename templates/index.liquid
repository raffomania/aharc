{%- render 'head' -%}

{% capture content %}
  {% render 'nav' %}
  {% for post in posts %}
    <div class="mb-8 prose">
      <a href="/posts/{{post.id}}.html" class="no-underline">
        <h3>{{ post.title }}</h3>
      </a>
      <p>{{ post.selftext_html }}</p>
    </div>
  {% endfor %}
{% endcapture %}

{%- render 'layout', content: content -%}